{
  "rules": {
    ".read": "true",  
    ".write": "auth != null",
    "users": {
      "$userId": {
        ".write": "auth != null && $userId === auth.uid" 
      }
    },
    "forums": {
      "$forumId": {
        ".write": "auth != null && newData.child('userId').val() === auth.uid"
      }
    },
    "posts": {
      "$forumId": {
        "$postId": {
          ".write": "auth != null && newData.child('userId').val() === auth.uid"
        }
      }
    },
    "comments": {
      "$postId": {
        ".write": "auth != null && newData.child('userId').val() === auth.uid"
      }
    }
  }
}